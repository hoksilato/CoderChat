<div class="contact-page container-fluid">
  <div class="row">
    <!--( a ) Contact Page Fixed Image Portion -->

    <div class="image-container col-md-3 col-sm-12">
      <div class="mask">
      </div>
      <div class="main-heading">
        <h1>sign in</h1>
      </div>
    </div>

    <!--( b ) Contact Page Content -->

    <div class="content-container col-md-9 col-sm-12">

      <%= render partial: "shared/flash", flash: flash %>

      <!--( A ) Contact Form -->

      <div class="clearfix full-height">
          <h2 class="small-heading">SIGN IN</h2>
          <div class="row">
            <div class="col-md-10 col-md-offset-1 col-xs-10 col-xs-offset-1">
              <div class="row">
                <%= simple_form_for :session, :url => sessions_path, html: {class: 'contact-form"'} do |f| %>

                  <div class="col-md-6 col-sm-6">
                    <div class="form-group">
                      <%= f.input :email, placeholder: 'Email', class: 'form-control', required: 'required' %>
                    </div>
                  </div>

                  <div class="col-md-6 col-sm-6">
                    <div class="form-group">
                      <%= f.input :password, placeholder: 'Password', class: 'form-control', required: 'required' %>
                    </div>
                  </div>

                  <div class="col-md-4 col-xs-12">
                    <%= f.submit 'Sign In', class: 'btn btn-send' %>
                  </div>

                <% end %>
              </div>
            </div>
          </div>
      </div>

      <!-- ( D ) Footer -->

      <%= render partial: "shared/footer" %>
    </div>
  </div>
</div>