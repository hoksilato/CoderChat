<div class="portfolio-page container-fluid">

  <div class="row">

    <!--( a ) Portfolio Page Fixed Image Portion -->

    <div class="image-container col-md-3 col-sm-12">
      <div class="mask">
      </div>
      <div class="main-heading">
        <h1>Messages</h1>
      </div>
    </div>

    <!--( b ) Portfolio Page Content -->

    <div class="content-container col-md-9 col-sm-12">

      <%= render partial: "shared/flash", flash: flash %>

      <!--( A ) Portfolio -->

      <div class="portfolio clearfix full-height">
        <h2 class="small-heading">MY MESSAGES</h2>

        <div class="row">
            <div class="col-md-10 col-md-offset-1 col-xs-10 col-xs-offset-1">
                <div class="project-container">
                    <div class="row">
                        <div class="project-controls">
                          <ul class="messages-nav">
                            <li><a href="" class="active">Incoming messages</a></li>
                            <li><a href="">Sent messages</a></li>
                            <li><a href="">New message</a></li>
                            <li><a href="">Add friends</a></li>
                          </ul>
                        </div>

                        <!-- Portfolio Control Buttons [ END ] -->

                        <div id="projects" class="projet-items clearfix">
                          <% @messages.each do |message| %>
                          <div class="bd-callout <%= if message.read then 'bd-callout-info' else 'bd-callout-danger' end %>">
                            <h4><%= message.sender %></h4>
                            <p><%= message.body %></p>
                          </div>
                          <% end %>
                        </div>
                    </div>
                </div>
            </div>
        </div>

      </div>

      <!-- Footer -->

      <%= render partial: "shared/footer" %>
    </div>
  </div>
</div>
<script type="text/javascript">
  $(document).ready(function() {
    $('#projects').mixItUp();
  });
</script>